<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Thanh trên cùng -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/chatToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleCentered="false"
        android:paddingEnd="8dp">

        <!-- Dòng này đặt avatar và tên ngay cạnh nút back -->
        <LinearLayout
            android:id="@+id/chatToolbarContent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="start"
            android:paddingStart="8dp">

            <!-- Avatar nằm sát nút Back -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user"
                android:scaleType="centerCrop"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp" />

            <!-- Tên và trạng thái -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvName"
                    android:text="Tên người nhận"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxWidth="180dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStatus"
                    android:text="Đang hoạt động"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_gravity="end"
            android:src="@drawable/infomation"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <View
        android:background="#838383"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <!-- Danh sách tin nhắn -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Thanh nhập tin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_unselected_genre"
        android:elevation="4dp">

        <EditText
            android:id="@+id/edtMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhập tin nhắn..."
            android:background="@drawable/bg_unselected_genre"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="5dp"
            android:paddingVertical="8dp" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/send_32"
            android:contentDescription="Gửi" />
    </LinearLayout>

</LinearLayout>
