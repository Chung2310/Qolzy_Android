<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubbleContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_qty_button"
    android:orientation="horizontal"
    android:padding="8dp"
    android:elevation="10dp"
    android:gravity="center_vertical">

    <!-- Ảnh cover -->
    <ImageView
        android:id="@+id/bubbleCover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <!-- Thông tin bài hát -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/bubbleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bài hát"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/bubbleArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ca sĩ"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- Play/Pause -->
    <ImageButton
        android:id="@+id/bubblePlayPause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_media_play" />

    <!-- Nút Xóa -->
    <ImageButton
        android:id="@+id/bubbleClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="Đóng" />
</LinearLayout>
